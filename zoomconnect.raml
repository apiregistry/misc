          get:
            description: Returns all messages
            displayName: all
            queryParameters:
              pageSize?:
                type: integer
                description: number of elements to return at a time
                displayName: pageSize
                default: 100
                format: int32
              page?:
                type: integer
                description: page number
                displayName: page
                default: 1
                format: int32
              type?:
                type: string
                description: filter by message type
                displayName: type
                enum:
                - OUTBOUND
                - INBOUND
              status?:
                type: string
                description: filter by message status
                displayName: status
                enum:
                - SCHEDULED
                - UNKNOWN
                - SENT
                - FAILED
                - FAILED_REFUNDED
                - FAILED_OPTOUT
                - DELIVERED
                - RECEIVED
