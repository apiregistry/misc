      campaign?:
        type: string
      contact?:
        type: WebServiceContactLink
      creditCost?:
        type: number
        format: double
      dateTimeReceived?:
        type: datetime
      dateTimeScheduled?:
        type: datetime
      dateTimeSent?:
        type: datetime
      deleted?:
        type: boolean
      fromNumber?:
        type: string
      links?:
        type: array
        items:
